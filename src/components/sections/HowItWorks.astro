---
import FeatureCard from "../FeatureCard.astro";
import Steps from "../Steps.astro";
import { Button } from "../ui/button";
import { Card, CardContent, CardDescription, CardFooter, CardHeader, CardTitle } from "../ui/card";
import Features from "./Features.astro";

const stepsData = [
    {
        step: "Create a Profile",
        description: "Sign up and fill in the details to set up a memorial page for your loved one."
    },
    {
        step: "Personalize the Tribute",
        description: "Add photos, a biography, and cherished memories to make the page truly unique."
    },
    {
        step: "Download the Auto-Generated QR Code",
        description: "Instantly receive a QR code that links directly to the memorial page, ready for use."
    },
    {
        step: "Print it Anywhere",
        description: "Choose your desired format and print the QR code for memorial cards, headstones, or any tribute setting."
    },
    {
        step: "Share and Keep Their Legacy Alive",
        description: "Place the printed QR code in a meaningful location and share the memorial page with friends and family to celebrate their life and legacy."
    }
];
---

<section class="p-10 flex flex-col align-middle items-center justify-center space-y-2">
    <div class="badge badge-primary badge-outline">how it works</div>
    <h1 class="text-2xl md:text-5xl">Honoring Memories Together</h1>



    <ul class="timeline timeline-snap-icon max-md:timeline-compact timeline-vertical">
        {stepsData.map((item, index) => (
            <li>
                <div class="timeline-middle">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-5 w-5">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class={index % 2 === 0 ? "timeline-start mb-10 md:text-end" : "timeline-end mb-10"}>
                    <time class="font-mono italic">{index + 1}.</time>
                    <div class="text-lg font-black">{item.step}</div>
                    {item.description}
                </div>
                <hr />
            </li>
        ))}
    </ul>



    <div class=" grid grid-cols-3 w-full overflow-x-auto">

    </div>
</setion>